# --- OpenAI -------------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# --- vector store / db -------------------------------------
VECTOR_STORE_TYPE=faiss
DB_URL=postgresql://books:books@postgres:5432/books
EMBEDDING_MODEL=text-embedding-ada-002

# .env for LOCAL development (run scripts directly)
DB_HOST=postgres
DB_PORT=5432
DB_USER=books
DB_PASSWORD=books
DB_NAME=books

# --- kafka --------------------------------------------------

# When containerized
KAFKA_BROKERS=kafka:9092
KAFKA_HOST=kafka
KAFKA_PORT=9092

# For local runs
# KAFKA_HOST=localhost
# KAFKA_PORT=29092

# --- batch parameters --------------------------------------
SIMILARITY_THRESHOLD=0.75
HALF_LIFE_DAYS=45

# --- optional workers --------------------------------------
ENABLE_TTS=0
ENABLE_IMAGE=0
